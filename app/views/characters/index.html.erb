

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<h4 style="text-align: center">Available cosplayers near you:</h4>

<div class="container">
  <ul>
    <% @characters.each do |character| %>
    <div class="card-trip">
      <%= cl_image_tag(character.photo, width: 300, height: 200, crop: :thumb, gravity: :face) %>
      <div class="card-trip-infos">
        <div>
          <h2><%= link_to character.name, character_path(character) %></h2>
          <p><%= character.description %></p>
        </div>
        <h2 class="card-trip-pricing">$<%= character.price %> /per day</h2>
        <% if policy(character).destroy?%>
          <%= link_to character, method: :delete do%>
        <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  </ul>
</div>
